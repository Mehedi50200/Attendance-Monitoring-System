<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="1dp">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@drawable/card_gradientblue" />

        <TextView
            android:id="@+id/tvdate"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="Date"
            android:textColor="@color/colorLightGrayText"
            android:textSize="13sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvnote"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Note will be added here"
            android:textAlignment="center"
            android:textColor="@color/colorDarkGrayText"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnremove"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="end|top|right"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/notedelete" />

    </LinearLayout>

</android.support.v7.widget.CardView>