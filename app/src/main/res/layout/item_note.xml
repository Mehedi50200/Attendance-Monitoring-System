<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="1dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorWhite">

        <View
            android:id="@+id/divider"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@drawable/card_gradientblue"/>

        <TextView
            android:id="@+id/tvdate"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Date"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:textStyle="italic"
            android:textColor="@color/colorLightGrayText"/>

        <TextView
            android:id="@+id/tvnote"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:text="Note will be added here"
            android:textAlignment="center"
            android:textColor="@color/colorDarkGrayText"/>

        <Button
            android:id="@+id/btnremove"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/notedelete"
            android:layout_gravity="end|top|right"/>

    </LinearLayout>

</android.support.v7.widget.CardView>