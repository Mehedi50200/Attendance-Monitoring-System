<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/cardbg"
        android:orientation="vertical">

        <include
            android:id="@+id/actionbar"
            layout="@layout/action_bar">
        </include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/coursecode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Code"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPink"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/coursename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:textColor="@color/colorPink"
                android:text="Course Name"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/empty_view_student"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No student enrolled for this course"
            android:visibility="gone"
            android:textColor="@color/colorPink"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvstudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/cardbg"
        android:layout_gravity="end|bottom">

        <TextView
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Take Attendance"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/bgaten"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cvtakeattendance"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/c_camera"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cvgallery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/c_gallery"/>

    </LinearLayout>



</LinearLayout>


