<?xml version="1.0" encoding="utf-8"?>

<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"


    tools:context="my.unimas.a50200siswa.studentattendancemonitoringsystem.SignUp_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            />

        <EditText
                android:id="@+id/sign_up_email"
                android:gravity="center"
                android:layout_height="50dp"
                android:layout_width="280dp"
                android:hint="Enter email"
                android:textColorHint="#43edff"
                android:textColor="#02b6d1"
                android:selectAllOnFocus="false"
                android:backgroundTint="@color/colorLightblue" />

        <EditText
            android:id="@+id/sign_up_password"
            android:gravity="center"
            android:layout_height="50dp"
            android:layout_width="280dp"
            android:inputType="textPassword"
            android:hint="Enter Password"
            android:textColorHint="#43edff"
            android:textColor="#02b6d1"
            android:backgroundTint="@color/colorLightblue" />


        <EditText
            android:id="@+id/sign_up_password_confirm"
            android:gravity="center"
            android:layout_height="50dp"
            android:layout_width="280dp"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:textColorHint="#43edff"
            android:textColor="#02b6d1"
            android:backgroundTint="@color/colorLightblue" />


        <Button
            android:id="@+id/signup_btn_register"

            android:text="Registration"
            style="@style/button_style"
            android:layout_width="276dp"
            android:layout_height="35dp"
            android:elevation="0dp"
            android:textAllCaps="false"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />

        <LinearLayout
            android:id="@+id/signup_layout_or"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="#868c8d"
                android:layout_margin="5dp"/>

            <TextView
                android:padding="5dp"
                android:text="already has account?"
                android:textColor="#868c8d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="#868c8d"
                android:layout_margin="5dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/signup_btn_forgot_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Forgot Password"
                android:textAllCaps="false"
                android:textColor="#2defaa" />
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#2defaa"
                android:text="|"/>

            <TextView
                android:id="@+id/signup_btn_login"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Login "
                android:textAllCaps="false"
                android:textColor="#2defaa" />




        </LinearLayout>



    </LinearLayout>
</android.widget.RelativeLayout>

