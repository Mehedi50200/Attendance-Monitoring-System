<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/studentcardview"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp"
    android:transitionName="tcard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/colorWhite">

        <View
            android:id="@+id/divider"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@drawable/card_gradientblue"/>

        <TextView
            android:id="@+id/tvstudentserial"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/colorLightGrayText"
            android:text="00"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/studentimage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/profilepic"
            android:transitionName="tstudentpic"/>

        <TextView
            android:id="@+id/tvstudentmatric"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Matric"
            android:textColor="@color/colorDarkGrayText"
            android:transitionName="tstudentmatric"/>

        <TextView
            android:id="@+id/tvstudentname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Student Name"
            android:textColor="@color/colorDarkGrayText"
            android:transitionName="tstudentname"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" />


    </LinearLayout>


</android.support.v7.widget.CardView>