<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/studentcardview"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    app:cardElevation="5dp"
    android:transitionName="tcard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvstudentserial"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="00"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/studentimage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/profilepic"
            android:transitionName="tstudentpic"/>

        <TextView
            android:id="@+id/tvstudentmatric"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Matric"
            android:transitionName="tstudentmatric"/>

        <ImageView
            android:id="@+id/anotific"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tvstudentname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Student Name"
            android:transitionName="tstudentname"/>


    </LinearLayout>


</android.support.v7.widget.CardView>